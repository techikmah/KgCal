<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:text="KgPrice"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kg Price (₹):"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_below="@id/appTitle"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editTodayPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Kg Price"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_below="@id/appTitle"
        android:layout_toEndOf="@id/appTitle"
        android:layout_marginTop="16dp"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight (Kg):"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_below="@id/editTodayPrice"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Weight"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_below="@id/editTodayPrice"
        android:layout_toEndOf="@id/appTitle"
        android:layout_marginTop="16dp"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount (₹):"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_below="@id/editWeight"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_below="@id/editWeight"
        android:layout_toEndOf="@id/appTitle"
        android:layout_marginTop="30dp"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editAmount"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        android:text="Calculate"
        android:textSize="26sp" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editAmount"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"
        android:text="Reset"
        android:textSize="26sp" />


</RelativeLayout>
